<h1>Edit Class Project</h1>

<%= form_for(@class_project, :url => update_project_path) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>
  
    <%= f.label :primary_language %>
    <%= f.text_field :primary_language %>
    
    <%= f.label :featured %>
    <%= f.text_field :featured %>

    <%= f.submit("Edit Class Project")%>
    
    <% @class_project.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>

  <% end %>

  <p><%= link_to("Home", root_path)%></p>