<h1>New Class Project</h1>

<%= form_for @class_project do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>
  
  <%= f.label :primary_language %>
  <%= f.text_field :primary_language %>
  
  <%= f.label :featured %>
  <%= f.check_box :featured %>

  <%= f.submit("Make a New Class Project")%>
  
  <% @class_project.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>

<% end %>

<% end %>
