<h1>Edit Contact</h1>

<%= form_for(@class_project, :url => update_project_path) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :message %>
  <%= f.text_field :message %>

  <%= f.submit("Edit Contact")%>
  
  <% @contact.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>

<% end %>